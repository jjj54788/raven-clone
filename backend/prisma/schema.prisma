generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String?
  provider  String   @default("local")
  avatarUrl String?
  bio       String?
  interests String[] @default([])
  settings  Json?
  integrations Json?
  credits   Int      @default(100)
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions Session[]
  todoLists TodoList[]
  storeCustomItems StoreCustomItem[]
  dailyCheckIns DailyCheckIn[]
  teamsOwned Team[]
  teamMemberships TeamMember[]
}

model Session {
  id        String   @id @default(uuid())
  title     String   @default("New Chat")
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]

  @@index([userId])
}

model Message {
  id        String   @id @default(uuid())
  role      String   // "user" | "assistant"
  content   String
  model     String?  // which AI model was used
  sessionId String
  createdAt DateTime @default(now())

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}

enum TodoStatus {
  TODO
  IN_PROGRESS
  DONE
  ARCHIVED
}

model TodoList {
  id        String   @id @default(uuid())
  userId    String
  name      String
  color     String?
  isInbox   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks TodoTask[]

  @@index([userId])
}

model TodoTask {
  id          String     @id @default(uuid())
  listId      String
  title       String
  description String?
  status      TodoStatus @default(TODO)
  priority    Int        @default(0)
  dueAt       DateTime?
  completedAt DateTime?
  position    Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  list TodoList @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@index([listId])
  @@index([status, dueAt])
}

model SignupAllowlistEmail {
  id        String   @id @default(uuid())
  email     String   @unique
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AppSetting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}

enum StoreItemType {
  TOOL
  SKILL
}

enum StoreItemPricing {
  FREE
  FREEMIUM
  PAID
  OPEN_SOURCE
}

model StoreCustomItem {
  id                String            @id @default(uuid())
  userId            String
  type              StoreItemType
  name              String
  description       String
  url               String
  iconText          String?
  pricing           StoreItemPricing?
  categories        String[]
  tags              String[]
  trialNotesMarkdown String?
  recommendReasons  String[]
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
}

model DailyCheckIn {
  id        String   @id @default(uuid())
  userId    String
  dateKey   String   // YYYY-MM-DD, computed client-side (day starts at 05:00 local)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dateKey])
  @@index([userId, createdAt])
}

enum TeamMemberRole {
  OWNER
  MEMBER
}

enum TeamMissionStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELED
}

enum TeamMissionTaskStatus {
  TODO
  IN_PROGRESS
  DONE
  REVISION
}

enum TeamMissionActivityLevel {
  INFO
  WARNING
  ERROR
}

model Team {
  id          String   @id @default(uuid())
  ownerUserId String
  name        String
  description String?
  tags        String[] @default([])
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner      User            @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)
  members    TeamMember[]
  assistants TeamAssistant[]
  missions   TeamMission[]

  @@index([ownerUserId])
  @@index([isPublic])
}

model TeamMember {
  id        String         @id @default(uuid())
  teamId    String
  userId    String
  role      TeamMemberRole @default(MEMBER)
  createdAt DateTime       @default(now())

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([userId])
  @@index([teamId])
}

model TeamAssistant {
  id              String   @id @default(uuid())
  teamId          String
  displayName     String
  modelId         String
  provider        String?
  roleTitle       String?
  roleDescription String?
  currentGoal     String?
  isLeader        Boolean  @default(false)
  sortOrder       Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  team           Team                 @relation(fields: [teamId], references: [id], onDelete: Cascade)
  leaderMissions TeamMission[]        @relation("TeamMissionLeader")
  tasks          TeamMissionTask[]
  activities     TeamMissionActivity[]

  @@index([teamId])
  @@index([teamId, isLeader])
}

model TeamMission {
  id                String            @id @default(uuid())
  teamId            String
  title             String
  description       String
  leaderAssistantId String?
  notificationEmail String?
  status            TeamMissionStatus @default(PENDING)
  totalTasks        Int               @default(0)
  completedTasks    Int               @default(0)
  reportMarkdown    String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  team            Team                 @relation(fields: [teamId], references: [id], onDelete: Cascade)
  leaderAssistant TeamAssistant?       @relation("TeamMissionLeader", fields: [leaderAssistantId], references: [id], onDelete: SetNull)
  tasks           TeamMissionTask[]
  activities      TeamMissionActivity[]
  sources         TeamMissionSource[]

  @@index([teamId, createdAt])
  @@index([teamId, status])
}

model TeamMissionTask {
  id             String                @id @default(uuid())
  missionId      String
  assistantId    String?
  title          String
  description    String?
  status         TeamMissionTaskStatus @default(TODO)
  sortOrder      Int                   @default(0)
  outputMarkdown String?
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt

  mission    TeamMission     @relation(fields: [missionId], references: [id], onDelete: Cascade)
  assistant  TeamAssistant?  @relation(fields: [assistantId], references: [id], onDelete: SetNull)
  activities TeamMissionActivity[]

  @@index([missionId, sortOrder])
  @@index([assistantId])
  @@index([status])
}

model TeamMissionActivity {
  id          String                   @id @default(uuid())
  missionId   String
  taskId      String?
  assistantId String?
  level       TeamMissionActivityLevel @default(INFO)
  title       String
  message     String?
  createdAt   DateTime                 @default(now())

  mission   TeamMission      @relation(fields: [missionId], references: [id], onDelete: Cascade)
  task      TeamMissionTask? @relation(fields: [taskId], references: [id], onDelete: Cascade)
  assistant TeamAssistant?   @relation(fields: [assistantId], references: [id], onDelete: SetNull)

  @@index([missionId, createdAt])
  @@index([taskId])
  @@index([assistantId])
  @@index([level])
}

model TeamMissionSource {
  id          String   @id @default(uuid())
  missionId   String
  url         String
  title       String?
  domain      String?
  snippet     String?
  trustScore  Int      @default(50)
  citedCount  Int      @default(0)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  mission TeamMission @relation(fields: [missionId], references: [id], onDelete: Cascade)

  @@unique([missionId, url])
  @@index([missionId])
  @@index([trustScore])
}
